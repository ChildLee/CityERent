/* pages/service_process/service_process.wxss */
.title {
  padding: 30rpx; }

.service-list {
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between; }
  .service-list .service-box {
    width: 25%;
    box-sizing: border-box; }
    .service-list .service-box .service-item {
      display: flex;
      align-items: center;
      flex-direction: column;
      border: 1px solid #e5e5e5;
      margin: 1rpx;
      padding: 30rpx 0;
      font-size: 28rpx;
      line-height: 1.5; }
      .service-list .service-box .service-item .icon {
        font-size: 60rpx; }
    .service-list .service-box:first-child .service-item {
      border-top-left-radius: 20rpx; }
    .service-list .service-box:nth-child(4) .service-item {
      border-top-right-radius: 20rpx; }
    .service-list .service-box:nth-last-child(4) .service-item {
      border-bottom-left-radius: 20rpx; }
    .service-list .service-box:last-child .service-item {
      border-bottom-right-radius: 20rpx; }
