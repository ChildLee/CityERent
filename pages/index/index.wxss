.recommend {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 30rpx; }
  .recommend .recommend-title {
    display: flex;
    align-items: center; }
    .recommend .recommend-title .recommend-name {
      font-size: 30rpx; }
    .recommend .recommend-title .line {
      margin-right: 10rpx;
