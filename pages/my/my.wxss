page {
  background-color: #F6F8F8;
  color: #333; }

.my {
  background-color: #fff; }
  .my .my-info {
    display: flex;
    align-items: center;
    padding: 50rpx 30rpx; }
    .my .my-info image {
      border-radius: 50%;
      width: 100rpx;
      height: 100rpx; }
    .my .my-info text {
      margin-left: 30rpx;
      font-size: 30rpx; }

.my-list {
  margin-top: 20rpx;
  padding: 0 30rpx;
  background-color: #fff; }
  .my-list .my-item {
    padding: 30rpx 0;
    display: flex;
    justify-content: space-between;
    position: relative; }
    .my-list .my-item:not(:last-child) {
      position: relative; }
      .my-list .my-item:not(:last-child):after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 200%;
        height: 200%;
        border-bottom: 1px solid #e0e0e0;
        box-sizing: border-box;
        transform: scale(0.5);
        transform-origin: 0 0;
        pointer-events: none; }
    .my-list .my-item text:last-child {
      color: #999; }

.loginOut {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 30rpx 0;
  text-align: center; }
