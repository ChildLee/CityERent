/* pages/rent_list/rent_list.wxss */
.house_list {
  padding: 0 30rpx; }
  .house_list .house_item {
    padding: 30rpx 0;
    box-sizing: border-box;
    display: flex;
    align-items: center; }
    .house_list .house_item:not(:last-child) {
      position: relative; }
      .house_list .house_item:not(:last-child):after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 200%;
        height: 200%;
        border-bottom: 1px solid #e0e0e0;
        box-sizing: border-box;
        transform: scale(0.5);
        transform-origin: 0 0;
        pointer-events: none; }
    .house_list .house_item image {
      flex: none;
      width: 145rpx;
      height: 145rpx;
      border-radius: 10rpx; }
    .house_list .house_item .house_item-info {
      margin-left: 30rpx;
      font-size: 32rpx;
      line-height: 1.3; }
      .house_list .house_item .house_item-info .house_item-desc {
        color: #999;
        font-size: 28rpx; }
      .house_list .house_item .house_item-info .house_item-price {
        color: red; }
