        padding: 0 20rpx;
        height: 60rpx;
        line-height: 60rpx; }
      .publish_box .publish_cell .publish-value input {
        border: 1rpx solid #d2d2d2;
        padding: 0 20rpx;
        height: 60rpx; }
      .publish_box .publish_cell .publish-value .icon {
        position: absolute;
        right: 10rpx;
        top: 2rpx; }
      .publish_box .publish_cell .publish-value radio-group {
        display: flex;
        justify-content: space-around; }
        .publish_box .publish_cell .publish-value radio-group label {
          display: flex;
          align-items: center; }
      .publish_box .publish_cell .publish-value switch {
        display: flex;
        justify-content: flex-end; }
      .publish_box .publish_cell .publish-value .mainPhoto {
        display: flex;
        flex-direction: column; }
        .publish_box .publish_cell .publish-value .mainPhoto image {
          width: 140rpx;
          height: 130rpx; }
        .publish_box .publish_cell .publish-value .mainPhoto .photoDesc {
          font-size: 22rpx; }
      .publish_box .publish_cell .publish-value .attachedFigure {
