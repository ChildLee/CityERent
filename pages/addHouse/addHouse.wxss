.publish_box {
  padding: 0 30rpx;
  color: #333; }
  .publish_box .publish_cell {
    display: flex;
    align-items: center;
    padding: 20rpx 0; }
    .publish_box .publish_cell map {
      width: 100%;
      height: 400rpx; }
    .publish_box .publish_cell .publish-name {
      flex: none;
      width: 200rpx;
      text-align: right;
      font-size: 30rpx; }
    .publish_box .publish_cell .publish-value {
      flex: 1;
      position: relative;
      line-height: 55rpx;
      margin-left: 40rpx;
      font-size: 26rpx; }
      .publish_box .publish_cell .publish-value image {
        width: 140rpx;
        height: 140rpx; }
      .publish_box .publish_cell .publish-value textarea {
        width: 100%;
        height: 200rpx; }
        .publish_box .publish_cell .publish-value textarea {
          position: relative; }
          .publish_box .publish_cell .publish-value textarea:after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 200%;
            height: 200%;
            border: 1px solid #e0e0e0;
