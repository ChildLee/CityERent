/* pages/service/service.wxss */
page {
  background-color: #f2f2f2; }

.service {
  padding: 0 30rpx;
  background-color: #fff;
  font-size: 30rpx; }
  .service > view {
    height: 90rpx;
    line-height: 90rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between; }
    .service > view:not(:last-child) {
      position: relative; }
      .service > view:not(:last-child):after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 200%;
        height: 200%;
        border-bottom: 1px solid #e0e0e0;
        box-sizing: border-box;
        transform: scale(0.5);
        transform-origin: 0 0;
        pointer-events: none; }
    .service > view button {
      font-size: 30rpx;
      padding: 0;
      box-sizing: border-box;
      width: 100%;
      height: 90rpx;
      line-height: 90rpx;
      background-color: #fff;
      display: flex;
      justify-content: space-between; }
      .service > view button:after {
        border: none; }
    .service > view .icon {
      color: #00af66; }
